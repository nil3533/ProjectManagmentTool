package com.nirmalya.ppmtool.utilities;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.nirmalya.ppmtool.repository.ProjectRepository;

@Service
public  class FetchDetails   {
	
	@Autowired
	private ProjectRepository projectRepository;
	
	public <T> T getProjectByIdentifier(String pIdentifier,String repositoryClassName) {
		
			return projectRepository.findByProjectIdentifier(pIdentifier);
		
	}

}
